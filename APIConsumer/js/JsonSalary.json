{
    "title": "An array of items",
    "items": {
        "title": "An object value",
        "required": [
            "dept_name",
            "salary" 
        ],
        "properties": {
            "dept_name": {
                "title": "A string value",
                "default": " ",
                "pattern": "^(.*)$",
                "examples": [
                    "IT"
                ],
                "$id": "#/items/properties/dept_name",
                "type": "string"
            },
            "salary": {
                "title": "An int value",
                "default": " ",
                "pattern": "^(.*)$",
                "examples": [
                    13
                ],
                "$id": "#/items/properties/salary",
                "type": "integer"
            }
        }
    }
}